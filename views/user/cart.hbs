<section class="h-100" style="background-color: #eee;">
  <div class="container h-100 py-5">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-10">
        <div class="d-flex justify-content-between align-items-center mb-4">
          <h3 class="fw-normal mb-0 text-black">Shopping Cart</h3>
          <div>
            <p class="mb-0"><span class="text-muted">Sort by:</span> <a href="#!" class="text-body">price <i
                  class="fas fa-angle-down mt-1"></i></a></p>
          </div>
        </div>


        {{#each products}}
                

        <div class="card rounded-3 mb-4" >
          <div class="card-body p-4" >

            <div class="row d-flex justify-content-between align-items-center">
                
              <div class="col-md-2 col-lg-2 col-xl-2">
                <img
                  src="/images/{{this.product.image}}"
                  class="img-fluid rounded-3" alt="">
              </div>
              <div class="col-md-3 col-lg-3 col-xl-3">
                <p class="lead fw-normal mb-2"> {{this.product.productname}}</p>
                <p><span class="text-muted">Size: </span>M <span class="text-muted">Color: </span>Grey</p>
              </div>
              <div class="col-md-3 col-lg-3 col-xl-2 d-flex">
                {{!-- <button class="btn btn-link px-2"
                  onclick="this.parentNode.querySelector('input[type=number]').stepDown()">
                  <i class="fas fa-minus"></i>
                </button> --}}
                {{#if product.status}}
                <button style="width: 65px;" class="cart-item-count mr-3" onclick="changeQuantity('{{this._id}}','{{this.item}}','{{this.quantity}}','{{this.product.productname}}',{{this.product.offerPrice}},-1)">-</button>
                {{else}}
                 <button style="width: 65px;" class="cart-item-count mr-3" onclick="changeQuantity('{{this._id}}','{{this.item}}','{{this.quantity}}','{{this.product.productname}}',{{this.product.price}},-1)">-</button>
                {{/if}}
                <span   id="{{this.item}}" >{{this.quantity}} </span>
                  

                {{!-- <button class="btn btn-link px-2"
                  onclick="this.parentNode.querySelector('input[type=number]').stepUp()">
                  <i class="fas fa-plus"></i>
                </button> --}}
                
                <button style="width: 65px;" class="cart-item-count ml-3" onclick="changeQuantity('{{this._id}}','{{this.item}}','{{this.quantity}}','{{this.product.productname}}',{{this.product.price}},1)">+</button>
              </div>
              <div class="col-md-3 col-lg-2 col-xl-2 offset-lg-1">
                <h5 id='{{this.product.productname}}' class="mb-0">â‚¹{{this.subtotal}}</h5>
              </div>
              <div class="col-md-1 col-lg-1 col-xl-1 text-end">
                {{!-- <a href="#!" class="text-danger"><i class="fa fa-trash" aria-hidden="true"></i></a> --}}
                <button onclick="removeFromCart('{{this._id}}','{{this.item}}')"><i class="fa fa-trash" aria-hidden="true" ></i></button>
              </div>
              
            </div>
                
          </div>
        </div>
        {{/each}}
        <div class="card mb-4">
          <div class="card-body p-4 d-flex flex-row">
        
            <div class="form-outline flex-fill">
              
              <label class="form-label" id="total" for="form1">total Amount: <p>{{total}}</p></label>
            </div>
            
          </div>
        </div>
        
        
        <div class="card mb-4">
          <div class="card-body p-4 d-flex flex-row">
            <form id="couponCode">
            <div class="form-outline flex-fill">
              <input type="text" id="coupon" name="coupon" class="form-control form-control-lg"  />
              
              <label class="form-label" for="form1">Discount code</label>
            </div>
            <button type="submit" class="btn btn-outline-primary btn-lg ms-3"   style="height:46px ;">Apply</button> 
            </form> 
          </div>
        </div>
        

        <div class="card">
          <div class="card-body">
            <button type="button" class="btn btn-primary btn-block btn-lg" onclick="location.href='/checkout'">Proceed to Pay</button>
          </div>
        </div>

      </div>
    </div>
  </div>
</section>
