<div class="layer"></div>
<main class="page-center">
  <article class="sign-up">
    <h1 class="sign-up__title">Welcome back!</h1>
    <p class="sign-up__subtitle">Sign in to your account to continue</p>
    <form class="sign-up-form form" action="/admin" method="post">
      <label class="form-label-wrapper">
        <p class="form-label">Email/Username</p>
        <input class="form-input" name="username" id="username" type="username" placeholder="Enter your username" required onkeyup="validateEmail()">
        <p id="emailerr" class="text-danger"></p>
      </label>
      <label class="form-label-wrapper">
        <p class="form-label">Password</p>
        <input class="form-input" name="password" id="password" type="password" placeholder="Enter your password" required onkeyup="validatePassword()">
        <p class="text-danger" id="passworderr"></p>
      </label>
      <a class="link-info forget-link" href="##">Forgot your password?</a>
      <label class="form-checkbox-wrapper">
        <input class="form-checkbox" type="checkbox" required>
        <span class="form-checkbox-label">Remember me next time</span>
      </label>
      <button class="form-btn primary-default-btn transparent-btn">Sign in</button>
    </form>
  </article>
</main>
<script>
    let errorEmail = document.getElementById('emailerr')
    let errorPassword = document.getElementById('passworderr')
    
   
    
    function validateEmail() {
        const name = document.getElementById('email').value
        if (name == "") {
            errorEmail.innerHTML = "Enter you email address"
            return false


        }
        if (!name.match(/^[a-zA-Z]*$/)) {
            errorEmail.innerHTML = 'Enter a proper email adress'
            return false
        }

        errorEmail.innerHTML = null
        return true
    }

    function validatePassword() {
        const name = document.getElementById('password').value
        if (name == "") {
            errorPassword.innerHTML = "Enter a password"
            return false
        }
        if (name.length < 2) {
            errorPassword.innerHTML = "Password should be  three characters"
            return false
        }
        errorPassword.innerHTML = null
        return true
    }
    


    function validation() {
        if ( !validateEmail() || !validatePassword() ) {
            return false
        }
        return true
    }
</script>