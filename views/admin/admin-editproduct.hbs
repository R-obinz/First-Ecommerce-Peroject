<div class="row">
    <div class="col-xl">
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Edit products</h5>

            </div>

            <div class="card-body">
                <form action="/admin/edit-product/{{items._id}}" method="post" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label class="form-label" for="name">Product Name</label>
                        <input type="text" class="form-control" id="productname" name="productname" value="{{items.productname}}" placeholder=""/>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Price</label>
                        <input type="price" class="form-control" id="price" name="price" value="{{items.price}}" placeholder="price"/>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">category</label>
                        <input type="category" id="category" name="category" value="{{items.category}}" class="form-control phone-mask"/>
                    </div>
    
                    <div class="mb-3">
                        <label class="form-label">Description</label>
                        <input id="description" name="description" value="{{items.description}}" class="form-control" placeholder="Enter your product description">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Input product image</label>
                        <img src="/images/{{this.image}}" alt="" style="width:50px;height:50px ;">
                        <input class="form-control" type="file" name="Image" id="Image"/>
                    </div>
                    <button type="submit" class="btn btn-success">update products</button>
                </form>
            </div>
        </div>
    </div>

</div>
